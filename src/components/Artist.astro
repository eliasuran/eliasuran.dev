---
import { Image } from 'astro:assets';
import { text } from '../lib/styles';

interface Props {
  name: string;
  spotifyLink: string;
  imageSrc: string;
}
const { name, imageSrc, spotifyLink } = Astro.props;
---

<div class="flex flex-col gap-2 items-center">
  <div class="w-40 aspect-square rounded-full overflow-hidden border-4 border-text">
    <Image src={imageSrc} alt={`Image for artist ${name} on Spotify`} width={200} height={200} />
  </div>
  <a href={spotifyLink} class={text.default}>{name}</a>
</div>
